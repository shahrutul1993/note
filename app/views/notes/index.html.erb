<div class="wrapper_with_padding">
  <div class="clearfix" id="notes">
    <% unless @notes.blank? %>
    <% @notes.each do |note| %>
    <a href="<%= (url_for [note]) %>">
      <div class="note">
        <p class="title">
          <%= note.title %>
        </p>
        <p class="date">
          <%= time_ago_in_words(note.created_at) %>
        </p>
        <% if note.published? %>
        <%= link_to "unpublish", unpublish_note_path(note), method: :put, class: 'btn btn-sm-warning' %>
        <% else %>,
        <%= link_to "publish", publish_note_path(note), method: :put, class: 'btn btn-sm-success' %>
        <% end %>
      </div>
    </a>
    <% end %>
    <% else %>

    <h2>Add a Note</h2>
    <p>It appears you haven't created any notes yet... Lets fix that. Why don't you go ahead and create a new note.</p>
    <button>
      <%= link_to "New Note", new_note_path %>
    </button>
    <% end %>

  </div>
</div>

